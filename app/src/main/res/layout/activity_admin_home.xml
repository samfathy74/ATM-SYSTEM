<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flat_bg"
    android:fillViewport="true"
    tools:context=".admin.admin_activities.activity_admin_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top">

            <ImageView
                android:id="@+id/profImg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_admin_profile"
                android:tooltipText="PROFILE" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/welcomeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemon"
                android:gravity="center"
                android:text="@string/welcome_in_new_activity"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="27sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/coiny"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:text="Admin "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lemon"
                android:gravity="center"
                android:text="@string/wishes_a_good_day_to_start"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardDepartment"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:clipToPadding="true"
                app:cardBackgroundColor="#CF69F4"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_department0" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_double_arrow" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_staff" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:fontFamily="@font/coiny"
                    android:gravity="center|bottom"
                    android:shadowColor="@color/black"
                    android:text="Management Departments and Staff"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAttendance"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_marginHorizontal="20dp"
                    android:clipToPadding="true"
                    app:cardBackgroundColor="#CF69F4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:contentPadding="5dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="5dp"
                        android:src="@drawable/ic_attendance" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:fontFamily="@font/coiny"
                        android:gravity="center|bottom"
                        android:shadowColor="@color/black"
                        android:text="Attendance"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRequest"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_marginHorizontal="20dp"
                    android:clipToPadding="true"
                    app:cardBackgroundColor="#CF69F4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:contentPadding="5dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="5dp"
                        android:src="@drawable/ic_request" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:fontFamily="@font/coiny"
                        android:gravity="center|bottom"
                        android:shadowColor="@color/black"
                        android:text="REQUESTS"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>