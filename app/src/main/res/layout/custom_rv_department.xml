<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/ic_containar_recycle_notification"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardEmpData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
           >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/textshap"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/ic_department0" />

                    <TextView
                        android:id="@+id/depName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="NULL"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp"
                    android:background="@drawable/textshap"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/depDesc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:lineHeight="30dp"
                        android:text="NULL\nghh"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/textshap"
                    android:layout_marginVertical="2dp"
                    android:padding="7dp">

                    <TextView
                        android:id="@+id/managerDepart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:lineHeight="30dp"
                        android:text="NULL\nrr"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textAlignment="center" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/textshap"
                    android:layout_marginVertical="2dp"
                    android:padding="7dp">

                    <TextView
                        android:id="@+id/empCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="NULL\nnull"
                        android:lineHeight="30dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/textshap"
                    android:layout_marginVertical="2dp"
                    android:padding="7dp">

                    <TextView
                        android:id="@+id/createdTimeDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="NULL\nggg"
                        android:lineHeight="30dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textAlignment="center" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:elevation="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_manager"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_btn"
                        android:backgroundTint="#E91E63"
                        android:elevation="15dp"
                        android:fontFamily="@font/coiny"
                        android:text="Managers"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_employee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_btn"
                        android:backgroundTint="@color/dark_blue"
                        android:elevation="15dp"
                        android:fontFamily="@font/coiny"
                        android:text="Employees"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>